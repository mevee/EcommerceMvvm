<?xml version="1.0" encoding="utf-8"?>
        
                                           
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" android:tag="layout/fav_service_item_0">

        <androidx.cardview.widget.CardView
            android:id="@+id/favCardItem"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_156dp"
            android:layout_marginStart="@dimen/_6dp"
            android:layout_marginTop="@dimen/_6dp"
            android:layout_marginEnd="@dimen/_6dp"
            android:layout_marginBottom="@dimen/_6dp"
            app:cardCornerRadius="@dimen/_4dp"
            app:cardElevation="@dimen/_2dp">

            <ImageView
                android:id="@+id/favImageItem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/image_placeholder" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#9A2A2A2A"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/productNameItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12dp"
                    android:layout_marginTop="@dimen/_8dp"
                    android:layout_marginEnd="@dimen/_12dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/lato_bold"
                    android:maxLines="2"
                    android:text="Men Haircut &amp; styling"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12dp"
                    android:layout_marginTop="@dimen/_2dp"
                    android:layout_marginEnd="@dimen/_12dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_10dp"
                        android:layout_height="@dimen/_10dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_star"
                        android:tint="@color/white" />

                    <TextView
                        android:id="@+id/tv_service_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_4dp"
                        android:fontFamily="@font/lato_semibold"
                        android:text="4.8"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sp" />

                    <TextView
                        android:id="@+id/discountedProductPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12dp"
                        android:fontFamily="@font/lato_semibold"
                        android:gravity="center"
                        android:text="â‚¹90"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12dp"
                    android:layout_marginTop="@dimen/_2dp"
                    android:layout_marginEnd="@dimen/_12dp"
                    android:layout_marginBottom="@dimen/_8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_10dp"
                        android:layout_height="@dimen/_10dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/clock_icon"
                        android:tint="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_4dp"
                        android:fontFamily="@font/lato_regular"
                        android:text="48 Mins"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sp" />

                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
         