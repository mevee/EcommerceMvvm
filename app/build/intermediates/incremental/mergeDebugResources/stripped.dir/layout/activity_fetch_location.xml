<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.activity.FetchLocationActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_48dp">

        <ImageView
            android:id="@+id/backFetchLocation"
            android:layout_width="@dimen/_36dp"
            android:layout_height="@dimen/_36dp"
            android:src="@drawable/ic_arrow_back"
            android:padding="@dimen/_8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_8dp"/>
        
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="See services around"
            android:gravity="center"
            android:textSize="@dimen/_24sp"
            android:textColor="@color/dark_gray"
            android:fontFamily="@font/lato_black"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80dp"
            android:layout_marginTop="@dimen/_12dp"
            android:src="@drawable/city_background"/>
        
        <LinearLayout
            android:id="@+id/currentLocationLinear"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/button_background"
            android:layout_marginStart="@dimen/_16dp"
            android:layout_marginEnd="@dimen/_16dp">

            <ImageView
                android:layout_width="@dimen/_20dp"
                android:layout_height="@dimen/_20dp"
                android:src="@drawable/ic_my_location"
                android:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your current location"
                android:layout_marginStart="@dimen/_12dp"
                android:fontFamily="@font/lato_semibold"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/searchLocationLinear"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_16dp"
            android:background="@drawable/border_corner_background"
            android:layout_marginStart="@dimen/_16dp"
            android:layout_marginEnd="@dimen/_16dp">

            <ImageView
                android:layout_width="@dimen/_20dp"
                android:layout_height="@dimen/_20dp"
                android:src="@drawable/search_icon"
                android:tint="@color/dark_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Some other location"
                android:layout_marginStart="@dimen/_12dp"
                android:fontFamily="@font/lato_semibold"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/_16sp"/>

        </LinearLayout>
        
    </LinearLayout>

</RelativeLayout>