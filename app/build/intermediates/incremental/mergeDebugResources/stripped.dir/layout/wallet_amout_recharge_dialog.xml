<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_bg">

    <com.webkype.happiroo.controller.utils.UnderlineTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter amount to recharge"
        android:layout_marginTop="@dimen/_8dp"
        android:layout_marginStart="@dimen/_8dp"
        android:layout_marginEnd="@dimen/_8dp"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_16sp"
        android:fontFamily="@font/lato_black"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40dp"
        android:background="@drawable/text_bg"
        android:layout_marginTop="@dimen/_8dp"
        android:layout_marginStart="@dimen/_8dp"
        android:layout_marginEnd="@dimen/_8dp"
        android:layout_marginBottom="@dimen/_8dp">

        <EditText
            android:id="@+id/etInputAmount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Amount"
            android:layout_toStartOf="@+id/rechargeWalletApplyBtnTxt"
            android:inputType="number"
            android:background="@color/transparent"
            android:maxLines="1"
            android:textSize="@dimen/_16sp"
            android:paddingStart="@dimen/_8dp"
            android:paddingEnd="@dimen/_8dp"
            android:textColor="@color/dark_gray"
            android:fontFamily="@font/lato_medium"/>

        <TextView
            android:id="@+id/rechargeWalletApplyBtnTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recharge"
            android:background="?attr/selectableItemBackground"
            android:textColor="@color/red"
            android:fontFamily="@font/lato_bold"
            android:textSize="@dimen/_16sp"
            android:paddingTop="@dimen/_8dp"
            android:paddingBottom="@dimen/_8dp"
            android:paddingStart="@dimen/_12dp"
            android:paddingEnd="@dimen/_12dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

</LinearLayout>