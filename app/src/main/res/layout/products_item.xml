<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data class="ProductItemBinding"></data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/productItemLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12dp"
            android:layout_marginStart="@dimen/_12dp"
            android:layout_marginEnd="@dimen/_12dp">

            <ImageView
                android:id="@+id/productImageItem"
                android:layout_width="@dimen/_56dp"
                android:layout_height="@dimen/_56dp"
                android:src="@drawable/image_placeholder" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toEndOf="@+id/productImageItem"
                android:layout_toStartOf="@+id/productAddLayout"
                android:layout_marginStart="@dimen/_8dp"
                android:layout_marginEnd="@dimen/_8dp">

                <TextView
                    android:id="@+id/productNameItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Product Name"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:fontFamily="@font/lato_bold"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_16sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_2dp">

                    <ImageView
                        android:layout_width="@dimen/_10dp"
                        android:layout_height="@dimen/_10dp"
                        android:src="@drawable/ic_star"
                        android:layout_gravity="center_vertical"
                        android:tint="@color/green"/>

                    <TextView
                        android:id="@+id/tv_service_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.8"
                        android:textColor="@color/green"
                        android:textSize="@dimen/_12sp"
                        android:layout_marginStart="@dimen/_4dp"
                        android:fontFamily="@font/lato_semibold"/>

                    <TextView
                        android:id="@+id/originalProductPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|start"
                        android:text="₹100"
                        android:layout_marginEnd="@dimen/_4dp"
                        android:layout_marginStart="@dimen/_8dp"
                        android:textColor="@color/html_txt_color"
                        android:fontFamily="@font/lato_semibold"
                        android:textSize="@dimen/_12sp" />


                    <TextView
                        android:id="@+id/discountedProductPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="₹90"
                        android:fontFamily="@font/lato_semibold"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_2dp">

                    <ImageView
                        android:layout_width="@dimen/_10dp"
                        android:layout_height="@dimen/_10dp"
                        android:src="@drawable/clock_icon"
                        android:layout_gravity="center_vertical"
                        android:tint="@color/html_txt_color"/>

                    <TextView
                        android:id="@+id/tv_service_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="48 Mins"
                        android:textColor="@color/html_txt_color"
                        android:textSize="@dimen/_12sp"
                        android:layout_marginStart="@dimen/_4dp"
                        android:fontFamily="@font/lato_regular"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/dotted_line"
                    android:layout_marginTop="@dimen/_4dp"
                    android:layout_marginBottom="@dimen/_4dp"/>

                <TextView
                    android:id="@+id/tv_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hair washing\nAny style hair cutting"
                    android:textColor="@color/html_txt_color"
                    android:textSize="@dimen/_12sp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginTop="@dimen/_2dp"
                    android:fontFamily="@font/lato_regular"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_4dp"
                    android:layout_marginBottom="@dimen/_12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Details"
                        android:layout_marginTop="@dimen/_1dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_14sp"
                        android:fontFamily="@font/lato_semibold"/>

                    <ImageView
                        android:layout_width="@dimen/_20dp"
                        android:layout_height="@dimen/_20dp"
                        android:src="@drawable/ic_keyboard_arrow"
                        android:tint="@color/colorPrimary"/>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/productAddLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_6dp">

                <TextView
                    android:id="@+id/productAddToCartBtnTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_28dp"
                    android:text="Add"
                    android:fontFamily="@font/lato_medium"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/border_corner_back2"
                    android:gravity="center"
                    android:visibility="visible"
                    android:paddingStart="@dimen/_16dp"
                    android:paddingEnd="@dimen/_16dp"/>

                <RelativeLayout
                    android:id="@+id/productCountLay"
                    android:layout_width="100dp"
                    android:layout_height="@dimen/_28dp"
                    android:background="@drawable/border_corner_back2"
                    android:paddingStart="@dimen/_2dp"
                    android:paddingEnd="@dimen/_2dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/add_product"
                        android:layout_width="30dp"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@color/white"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:text="+"
                         android:textColor="@color/green"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_count"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="1"
                        android:fontFamily="@font/lato_medium"
                        android:textColor="@color/dark_gray" />

                    <TextView
                        android:id="@+id/subtract_product"
                        android:layout_width="30dp"
                         android:layout_height="25dp"
                        android:background="@color/white"
                        android:layout_centerVertical="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:text="-"
                        android:textColor="@color/red"
                        android:textStyle="bold" />

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_10dp"
            android:background="@color/bg_gray"/>

    </LinearLayout>
</layout>