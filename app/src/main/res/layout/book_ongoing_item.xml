<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="BookingOngoingBinding">

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10dp"
            app:cardCornerRadius="@dimen/_0dp"
            app:cardElevation="@dimen/_2dp">

            <LinearLayout
                android:id="@+id/bookingOngoingItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?attr/selectableItemBackground"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12dp"
                    android:layout_marginStart="@dimen/_12dp"
                    android:layout_marginEnd="@dimen/_12dp">

                    <TextView
                        android:id="@+id/tvServiceName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Haircut for Home"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/_16sp"
                        android:fontFamily="@font/lato_bold"
                        android:textColor="@color/dark_gray" />

                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Job Pending"
                        android:fontFamily="@font/lato_semibold"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sp"
                        android:paddingStart="@dimen/_8dp"
                        android:paddingEnd="@dimen/_8dp"
                        android:paddingTop="@dimen/_4dp"
                        android:paddingBottom="@dimen/_4dp"
                        android:background="@drawable/button_background"
                        android:backgroundTint="@color/red"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tvBookingTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7:00 AM - 8:00 AM on 22 Jul, 2020"
                    android:layout_marginTop="@dimen/_2dp"
                    android:layout_marginStart="@dimen/_12dp"
                    android:layout_marginEnd="@dimen/_12dp"
                    android:textSize="@dimen/_12sp"
                    android:fontFamily="@font/lato_regular" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:background="@color/bg_gray"
                    android:layout_marginTop="@dimen/_8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_12dp"
                    android:layout_marginStart="@dimen/_12dp"
                    android:layout_marginEnd="@dimen/_12dp"
                    android:layout_marginBottom="@dimen/_12dp">

                    <ImageView
                        android:layout_width="@dimen/_16dp"
                        android:layout_height="@dimen/_16dp"
                        android:src="@drawable/id_icon"
                        android:tint="@color/html_txt_color" />

                    <TextView
                        android:id="@+id/tvBookingId"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Booking ID: 001"
                        android:fontFamily="@font/lato_bold"
                        android:layout_marginStart="@dimen/_8dp"
                        android:textColor="@color/dark_gray" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/dotted_line"
                    android:layout_marginStart="@dimen/_12dp"
                    android:layout_marginEnd="@dimen/_12dp" />

                <TextView
                    android:id="@+id/tvBookingInclude"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12dp"
                    android:layout_marginEnd="@dimen/_12dp"
                    android:layout_marginTop="@dimen/_6dp"
                    android:layout_marginBottom="@dimen/_12dp"
                    android:text="Hair cutting &amp; styling (x1)"
                    android:fontFamily="@font/lato_bold"
                    android:textColor="@color/dark_gray" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:background="@color/bg_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="@dimen/_12dp"
                            android:layout_height="@dimen/_12dp"
                            android:src="@drawable/close"
                            android:tint="@color/html_txt_color" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cancel"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/html_txt_color"
                            android:textSize="@dimen/_14sp"
                            android:layout_marginStart="@dimen/_8dp"
                            android:fontFamily="@font/lato_regular" />

                    </LinearLayout>

                    <View
                        android:layout_width="0.8dp"
                        android:layout_height="match_parent"
                        android:background="@color/bg_gray" />

                    <LinearLayout
                        android:id="@+id/viewProjectOngoingLayoutBtn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="@dimen/_16dp"
                            android:layout_height="@dimen/_16dp"
                            android:src="@drawable/project_icon"
                            android:tint="@color/html_txt_color" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/view_detail"
                            android:textColor="@color/html_txt_color"
                            android:textSize="@dimen/_14sp"
                            android:layout_marginStart="@dimen/_8dp"
                            android:fontFamily="@font/lato_regular" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>