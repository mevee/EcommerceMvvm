<?xml version="1.0" encoding="utf-8"?>
                                                                   

    

           

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rlBackUserReview"
        android:background="@color/white"
        android:layout_marginStart="@dimen/_16dp"

        android:layout_marginTop="@dimen/_8dp"
        android:layout_marginEnd="@dimen/_16dp" android:tag="layout/user_review_item_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userImage"
            android:layout_width="@dimen/_30dp"
            android:layout_height="@dimen/_30dp"
            android:layout_margin="@dimen/_8dp"
            android:background="@drawable/account_icon"
              />

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginStart="@dimen/_8dp"
            android:layout_marginTop="@dimen/_8dp"
            android:layout_marginEnd="@dimen/_8dp"
            android:layout_toEndOf="@+id/userImage"
            android:ellipsize="end"
            android:fontFamily="@font/lato_bold"
             android:hint="No name available"
            android:text="Ravi Kumar"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/_14sp" />

        <RatingBar
            android:id="@+id/rbProdRateByUser"
            android:layout_below="@+id/tvUserName"
            android:layout_toEndOf="@+id/userImage"
            android:layout_marginStart="@dimen/_8dp"
            android:layout_marginTop="@dimen/_4dp"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userImage"
            android:layout_marginStart="@dimen/_8dp"
            android:layout_marginTop="@dimen/_6dp"
            android:layout_marginBottom="@dimen/_16dp"
            android:layout_marginEnd="@dimen/_8dp"
            android:ellipsize="end"
            android:lineSpacingExtra="2.5dp"
            android:fontFamily="@font/lato_light"
             android:text="Ravi Kumar"
            android:textColor="@color/html_txt_color"
            android:textSize="@dimen/_12sp" />


    </RelativeLayout>
         