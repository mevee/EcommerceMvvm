<?xml version="1.0" encoding="utf-8"?>
                                                                   

    

           

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_8dp" android:tag="layout/item_in_order_layout_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:id="@+id/tvProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_8dp"
            android:layout_toStartOf="@+id/ivItemImage"
            android:fontFamily="@font/lato_regular"
            android:maxLines="2"
            android:text="Men T shirt of denim"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/_14sp" />



        <TextView
            android:id="@+id/tvNoOfItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvProductName"
            android:layout_marginTop="@dimen/_8dp"
            android:fontFamily="@font/lato_regular"
            android:singleLine="true"
            android:text="Seller : XYZ"
            android:textColor="@color/html_txt_color"
            android:textSize="@dimen/_12sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNoOfItems"
            android:layout_marginTop="@dimen/_8dp"
            android:fontFamily="@font/lato_regular"
            android:singleLine="true"
            android:text="\u20B96999"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/_14sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivItemImage"
            android:layout_width="@dimen/_50dp"
            android:layout_height="@dimen/_50dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/_8dp"
            android:src="@drawable/styling_image2" />
    </RelativeLayout>

         