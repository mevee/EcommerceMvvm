<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.policyes.PrivacyPolicyActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"

        android:layout_height="@dimen/_48dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="0dp"
        app:cardElevation="@dimen/_4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/back"
                android:layout_width="@dimen/_36dp"
                android:layout_height="@dimen/_36dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="@dimen/_8dp"
                android:src="@drawable/ic_arrow_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_48dp"
                android:fontFamily="@font/lato_black"
                android:text="Privacy Policy"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/_18sp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_48dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/_6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_8dp"
                android:layout_marginTop="@dimen/_4dp"
                android:lineSpacingExtra="2.5dp"
                android:fontFamily="@font/lato_medium"
                android:text="Please read Privacy Policy\nReservation of Rights"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/_16sp" />

            <TextView
                android:id="@+id/tvTnc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/lato_medium"
                android:lineSpacingExtra="2.9dp"
                android:padding="@dimen/_6dp"
                android:text="@string/privacyPolicy"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/_16sp" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>