<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_48dp"
            android:background="@color/colorPrimary">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_12dp"
                android:fontFamily="@font/lato_black"
                android:text="@string/my_profile"
                android:textColor="@color/white"
                android:textSize="@dimen/_18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_12dp"
                android:background="@drawable/text_bg"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/lato_medium"
                android:foreground="?attr/selectableItemBackground"
                android:paddingStart="@dimen/_16dp"
                android:paddingTop="@dimen/_8dp"
                android:paddingEnd="@dimen/_16dp"
                android:paddingBottom="@dimen/_8dp"
                android:text="Login"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sp"
                android:visibility="gone" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_48dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_80dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_12dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_user_name_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_12dp"
                            android:fontFamily="@font/lato_semibold"
                            android:text="Ashwini Kumar"
                            android:textColor="@color/dark_gray" />

                        <TextView
                            android:id="@+id/tv_user_email_profile"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_6dp"
                            android:fontFamily="@font/lato_regular"
                            android:text="ashwini@webkype.com"
                            android:textSize="@dimen/_12sp" />

                        <TextView
                            android:id="@+id/tv_user_mobile_profile"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato_regular"
                            android:text="7766996677"
                            android:textSize="@dimen/_12sp" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/editProfile_iV"
                        android:layout_width="@dimen/_36dp"
                        android:layout_height="@dimen/_36dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_12dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="@dimen/_8dp"
                        android:src="@drawable/edit_profile"
                        android:tint="@color/html_txt_color" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_6dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/bg_gray" />

                </RelativeLayout>

                <FrameLayout
                    android:id="@+id/myOrdersLinear"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    android:background="?attr/selectableItemBackground"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_20dp"
                        android:layout_height="@dimen/_20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_12dp"
                        android:src="@drawable/ic_baseline_list_24"
                        android:tint="@color/html_txt_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_44dp"
                        android:fontFamily="@font/lato_medium"
                        android:text="@string/my_orders"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="@dimen/_44dp"
                        android:background="@color/bg_gray" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/myFavProducts"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    android:visibility="visible"
                    android:background="?attr/selectableItemBackground"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_20dp"
                        android:layout_height="@dimen/_20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_12dp"
                        android:src="@drawable/fav_border"
                        android:tint="@color/html_txt_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_44dp"
                        android:fontFamily="@font/lato_medium"
                        android:text="@string/favourite_products"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="@dimen/_44dp"
                        android:background="@color/bg_gray" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/myCartLinear"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    android:background="?attr/selectableItemBackground"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_20dp"
                        android:layout_height="@dimen/_20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_12dp"
                        android:src="@drawable/cart_icon"
                        android:tint="@color/html_txt_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_44dp"
                        android:fontFamily="@font/lato_medium"
                        android:text="@string/my_cart"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="@dimen/_44dp"
                        android:background="@color/bg_gray" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/myFavServices"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    android:background="?attr/selectableItemBackground"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_20dp"
                        android:layout_height="@dimen/_20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_12dp"
                        android:src="@drawable/fav_border"
                        android:tint="@color/html_txt_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_44dp"
                        android:fontFamily="@font/lato_medium"
                        android:text="Favourite Services"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="@dimen/_44dp"
                        android:background="@color/bg_gray" />
                </FrameLayout>


                <LinearLayout
                    android:id="@+id/notificationLinear"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    android:background="?attr/selectableItemBackground"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_20dp"
                        android:layout_height="@dimen/_20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_12dp"
                        android:src="@drawable/notification_icon"
                        android:tint="@color/html_txt_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_12dp"
                        android:fontFamily="@font/lato_medium"
                        android:text="@string/notifications"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_16sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_marginStart="@dimen/_44dp"
                    android:background="@color/bg_gray" />

                <LinearLayout
                    android:id="@+id/referEarnLinear"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    android:background="?attr/selectableItemBackground"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_20dp"
                        android:layout_height="@dimen/_20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_12dp"
                        android:src="@drawable/link"
                        android:tint="@color/html_txt_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_12dp"
                        android:fontFamily="@font/lato_medium"
                        android:text="@string/refer_amp_earn"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_16sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_marginStart="@dimen/_44dp"
                    android:background="@color/bg_gray" />

                <LinearLayout
                    android:id="@+id/llAboutUs"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_20dp"
                        android:layout_height="@dimen/_20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_12dp"
                        android:src="@drawable/logo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_12dp"
                        android:fontFamily="@font/lato_medium"
                        android:text="@string/about_mclap"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_16sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_marginStart="@dimen/_44dp"
                    android:background="@color/bg_gray" />

                <LinearLayout
                    android:id="@+id/llProfileShareApp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_20dp"
                        android:layout_height="@dimen/_20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_12dp"
                        android:src="@drawable/share_icon"
                        android:tint="@color/html_txt_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_12dp"
                        android:fontFamily="@font/lato_medium"
                        android:text="@string/share_app"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_16sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_marginStart="@dimen/_44dp"
                    android:background="@color/bg_gray" />

                <LinearLayout
                    android:id="@+id/llProfileRateApp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_20dp"
                        android:layout_height="@dimen/_20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_12dp"
                        android:src="@drawable/rate_icon"
                        android:tint="@color/html_txt_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_12dp"
                        android:fontFamily="@font/lato_medium"
                        android:text="@string/rate_mclap"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_16sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_marginStart="@dimen/_44dp"
                    android:background="@color/bg_gray" />

                <LinearLayout
                    android:id="@+id/ll_tnc"

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_20dp"
                        android:layout_height="@dimen/_20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_12dp"
                        android:src="@drawable/agreement_icon"
                        android:tint="@color/html_txt_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_12dp"
                        android:fontFamily="@font/lato_medium"
                        android:text="@string/terms_amp_conditions"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_16sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_marginStart="@dimen/_44dp"
                    android:background="@color/bg_gray" />

                <LinearLayout
                    android:id="@+id/llCancellationPolicy"

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_20dp"
                        android:layout_height="@dimen/_20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_12dp"
                        android:src="@drawable/agreement_icon"
                        android:tint="@color/html_txt_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_12dp"
                        android:fontFamily="@font/lato_medium"
                        android:text="Cancellation policy"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_16sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_marginStart="@dimen/_44dp"
                    android:background="@color/bg_gray" />
                <LinearLayout
                    android:id="@+id/llPrivacyPolicies"

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_20dp"
                        android:layout_height="@dimen/_20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_12dp"
                        android:src="@drawable/agreement_icon"
                        android:tint="@color/html_txt_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_12dp"
                        android:fontFamily="@font/lato_medium"
                        android:text="Privacy policy"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_16sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_marginStart="@dimen/_44dp"
                    android:background="@color/bg_gray" />

                <LinearLayout
                    android:id="@+id/llDisclaimer"

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_20dp"
                        android:layout_height="@dimen/_20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_12dp"
                        android:src="@drawable/agreement_icon"
                        android:tint="@color/html_txt_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_12dp"
                        android:fontFamily="@font/lato_medium"
                        android:text="Disclaimer"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_16sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_marginStart="@dimen/_44dp"
                    android:background="@color/bg_gray" />

                <LinearLayout
                    android:id="@+id/ll_faq"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_20dp"
                        android:layout_height="@dimen/_20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_12dp"
                        android:src="@drawable/faq_icon"
                        android:tint="@color/html_txt_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_12dp"
                        android:fontFamily="@font/lato_medium"
                        android:text="Customer support"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_16sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_marginStart="@dimen/_44dp"
                    android:background="@color/bg_gray" />

                <LinearLayout
                    android:id="@+id/ll_logout_profile"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_20dp"
                        android:layout_height="@dimen/_20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_12dp"
                        android:rotation="180"
                        android:src="@drawable/logout_icon"
                        android:tint="@color/red" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_12dp"
                        android:fontFamily="@font/lato_medium"
                        android:text="@string/logout"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_16sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_login_profile"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_20dp"
                        android:layout_height="@dimen/_20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_12dp"
                        android:src="@drawable/logout_icon"
                        android:tint="@color/green" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_12dp"
                        android:fontFamily="@font/lato_medium"
                        android:text="@string/login"
                        android:textColor="@color/green"
                        android:textSize="@dimen/_16sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_marginStart="@dimen/_44dp"
                    android:background="@color/bg_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_16dp"
                    android:layout_marginEnd="@dimen/_16dp"
                    android:background="@drawable/border_corner_back2"
                    android:fontFamily="@font/lato_regular"
                    android:paddingStart="@dimen/_12dp"
                    android:paddingTop="@dimen/_6dp"
                    android:paddingEnd="@dimen/_12dp"
                    android:paddingBottom="@dimen/_6dp"
                    android:text="Version 1.0"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_10sp" />

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>
</layout>