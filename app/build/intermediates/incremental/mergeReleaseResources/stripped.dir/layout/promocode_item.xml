<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12dp"
        android:layout_marginEnd="@dimen/_12dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12dp">

            <CheckBox
                android:id="@+id/promoCodeItem_cB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorPrimary"
                android:checked="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NEW 10"
                android:fontFamily="@font/lato_bold"
                android:textColor="@color/dark_gray"
                android:layout_toEndOf="@+id/promoCodeItem_cB"
                android:paddingTop="@dimen/_8dp"
                android:paddingBottom="@dimen/_8dp"
                android:paddingStart="@dimen/_16dp"
                android:paddingEnd="@dimen/_16dp"
                android:layout_marginStart="@dimen/_12dp"
                android:background="@drawable/dotted_box"
                android:backgroundTint="@color/colorPrimary"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save \u20b950"
            android:fontFamily="@font/lato_bold"
            android:textColor="@color/dark_gray"
            android:layout_marginStart="@dimen/_40dp"
            android:layout_marginTop="@dimen/_8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10% off upto \u20b950 on home salon services"
            android:fontFamily="@font/lato_regular"
            android:layout_marginBottom="@dimen/_12dp"
            android:layout_marginStart="@dimen/_40dp"
            android:layout_marginTop="@dimen/_2dp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2dp"
        android:background="@color/light_grey_blue"/>

</LinearLayout>