<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".view.activity.shopProduct.AddProductRatingFragment">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_8dp">

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="@dimen/_40dp"
                android:layout_height="@dimen/_40dp"
                android:background="?selectableItemBackground"
                android:padding="@dimen/_6dp"
                android:src="@drawable/ic_clear_black_24dp"
                android:tint="@color/html_txt_color" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_56dp"
                android:layout_toRightOf="@+id/reviewOrderImage"
                android:fontFamily="@font/lato_medium"
                android:text="Fill following to add a review"
                android:textColor="@color/html_txt_color"
                android:textSize="@dimen/_16sp" />
        </FrameLayout>

        <ProgressBar
            android:visibility="gone"
            android:id="@+id/progressBarAddRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8dp"
            android:layout_marginStart="@dimen/_8dp"
            android:layout_toRightOf="@+id/reviewOrderImage"
            android:fontFamily="@font/lato_medium"
            android:text="Select Rating"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4dp"
            android:layout_marginStart="@dimen/_8dp"
            android:layout_marginBottom="@dimen/_8dp"
            android:layout_toRightOf="@+id/reviewOrderImage"
            android:fontFamily="@font/lato_medium"
            android:text="You can swipe on stars to select a rating"
            android:textColor="@color/html_txt_color"
            android:textSize="@dimen/_12sp"
            android:textStyle="normal" />


        <RatingBar
            android:id="@+id/rb_rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/_8dp"
            android:layout_marginEnd="@dimen/_4dp"
            android:fontFamily="@font/lato_medium"
            android:gravity="center"
            android:numStars="5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8dp"
            android:layout_toRightOf="@+id/reviewOrderImage"
            android:fontFamily="@font/lato_medium"
            android:text="Add a written review"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_review_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8dp"
            android:layout_marginTop="@dimen/_8dp"
            android:layout_marginBottom="@dimen/_8dp"
            android:layout_marginEnd="@dimen/_8dp"
            android:background="@drawable/stroke_rounded_grey"
            android:fontFamily="@font/lato_medium"
            android:gravity="top"
            android:hint="Tell us what you like or dislike about this product."
            android:inputType="textCapSentences|textMultiLine"
            android:maxHeight="@dimen/_8dp"
            android:minHeight="@dimen/_56dp"
            android:padding="@dimen/_6dp"
            android:textSize="@dimen/_14sp" />


        <TextView
            android:id="@+id/tv_btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8dp"
            android:background="@drawable/grad_primary_hz"
            android:fontFamily="@font/lato_medium"
            android:gravity="center"
            android:paddingTop="@dimen/_12dp"
            android:paddingBottom="@dimen/_12dp"
            android:text="Submit"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_16dp" />
    </LinearLayout>
</layout>