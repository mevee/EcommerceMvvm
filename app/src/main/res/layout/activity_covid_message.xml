<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.checout_process.CovidMessageActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/msgHeaderCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="0dp"
        app:cardElevation="@dimen/_4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_48dp">

            <ImageView
                android:id="@+id/backMessage"
                android:layout_width="@dimen/_36dp"
                android:layout_height="@dimen/_36dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="@dimen/_8dp"
                android:src="@drawable/ic_arrow_back" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/msgHeaderCard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I am safe and healthy"
                android:layout_marginTop="@dimen/_24dp"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginEnd="@dimen/_16dp"
                android:gravity="center"
                android:fontFamily="@font/lato_black"
                android:textSize="@dimen/_18sp"
                android:textColor="@color/dark_gray"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="COVID-19 Self-Declaration: Your honest response will ensure your safety and that of our professionals. Help control the spread of COVID-19"
                android:layout_marginTop="@dimen/_8dp"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginEnd="@dimen/_16dp"
                android:gravity="center"
                android:fontFamily="@font/lato_regular"
                android:textSize="@dimen/_14sp"
                android:textColor="@color/dark_gray"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1dp"
                android:background="@color/bg_gray"
                android:layout_marginTop="@dimen/_16dp"
                android:layout_marginBottom="@dimen/_16dp"/>

            <RadioButton
                android:id="@+id/covidAgree_rB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginEnd="@dimen/_16dp"
                android:fontFamily="@font/lato_semibold"
                android:textSize="@dimen/_18sp"
                android:textColor="@color/dark_gray"
                android:text="Click here to agree"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. I am not suffering from flu-like symptoms: Fever, Cough, Breathlessness, Sore throat etc.\n\n2. I have not travelled domestically or internationally in last 14 days.\n\n3. I have not come with any COVID-19 case in last 14 days."
                android:layout_marginTop="@dimen/_8dp"
                android:layout_marginStart="@dimen/_40dp"
                android:layout_marginEnd="@dimen/_16dp"
                android:fontFamily="@font/lato_regular"
                android:textSize="@dimen/_14sp"
                android:textColor="@color/html_txt_color"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40dp"/>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="visible"
        android:background="@color/light_grey_blue">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2dp"
            android:background="@color/bg_gray"/>

        <RelativeLayout
            android:id="@+id/covidIAgreeRelative"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_48dp"
            android:layout_marginTop="@dimen/_8dp"
            android:layout_marginStart="@dimen/_12dp"
            android:layout_marginEnd="@dimen/_12dp"
            android:layout_marginBottom="@dimen/_8dp"
            android:background="@drawable/button_background"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I agree"
                android:layout_centerInParent="true"
                android:fontFamily="@font/lato_semibold"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sp"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>