<?xml version="1.0" encoding="utf-8"?>
        

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" android:tag="layout/price_detail_layout_0">

        <RelativeLayout
            android:id="@+id/cartTotalLay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_24dp"
            android:layout_marginStart="@dimen/_12dp"
            android:layout_marginEnd="@dimen/_12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/lato_regular"
                android:text="Cart Total"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/_12sp" />

            <TextView
                android:id="@+id/cartTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/lato_medium"
                android:text="\u20b990"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/_12sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/discountLay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_24dp"
            android:layout_marginStart="@dimen/_12dp"
            android:layout_marginEnd="@dimen/_12dp"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/lato_regular"
                android:text="Discount"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/_12sp" />

            <TextView
                android:id="@+id/discount_tV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/lato_medium"
                android:text="\u20b910"
                android:textColor="@color/green"
                android:textSize="@dimen/_12sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/walletCreditLay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_24dp"
            android:layout_marginStart="@dimen/_12dp"
            android:layout_marginEnd="@dimen/_12dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/lato_regular"
                android:text="Wallet Used"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/_12sp" />

            <TextView
                android:id="@+id/walletPoints_tV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/lato_regular"
                android:text="\u20b950"
                android:textColor="@color/green"
                android:textSize="@dimen/_12sp" />

        </RelativeLayout>

        <RelativeLayout

            android:id="@+id/otherChargesLay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_24dp"
            android:layout_marginStart="@dimen/_12dp"
            android:layout_marginEnd="@dimen/_12dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/lato_regular"
                android:text="Safety &amp; Hygiene Charges"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/_12sp" />

            <TextView
                android:id="@+id/deliveryCharges"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/lato_regular"
                android:text="\u20b940"
                android:textColor="@color/red"
                android:textSize="@dimen/_12sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginStart="@dimen/_12dp"
            android:layout_marginTop="@dimen/_4dp"
            android:layout_marginEnd="@dimen/_12dp"
            android:layout_marginBottom="@dimen/_4dp"
            android:alpha="0.3"
            android:background="@color/dark_gray" />

        <RelativeLayout
            android:id="@+id/totalAmtLay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_32dp"
            android:layout_marginStart="@dimen/_12dp"
            android:layout_marginEnd="@dimen/_12dp"
            android:layout_marginBottom="@dimen/_4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/lato_black"
                android:text="Total"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/_14sp" />

            <TextView
                android:id="@+id/tv_amt_to_be_paid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/lato_black"
                android:text="\u20b970"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/_14sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginStart="@dimen/_12dp"
            android:layout_marginTop="@dimen/_4dp"
            android:layout_marginEnd="@dimen/_12dp"
            android:layout_marginBottom="@dimen/_4dp"
            android:alpha="0.3"
            android:background="@color/dark_gray"
            android:visibility="gone" />

    </LinearLayout>
         