<?xml version="1.0" encoding="utf-8"?>

                                                        

    

           

    <androidx.cardview.widget.CardView
        android:id="@+id/card_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin=".2dp"
        android:foreground="?selectableItemBackground"
        android:orientation="vertical"
        app:cardCornerRadius="0dp" android:tag="layout/shop_product_item_layout_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_catgory"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/image_placeholder"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="H,5:6"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_8dp"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <TextView
                        android:id="@+id/tv_off"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_background"
                        android:fontFamily="@font/lato_regular"
                        android:gravity="center"
                        android:lineSpacingExtra="2.5dp"
                        android:padding="@dimen/_4dp"

                        android:text="20%\nOFF!"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sp"
                        android:textStyle="normal"
                        android:visibility="visible" />
                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_40dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_product_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_6dp"
                        android:layout_marginTop="@dimen/_4dp"
                        android:layout_marginEnd="@dimen/_6dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/lato_regular"
                        android:maxLines="1"
                        android:text="test title\n"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_6dp"
                        android:layout_marginEnd="@dimen/_6dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/lato_regular"
                        android:lineSpacingExtra="2.5dp"
                        android:maxLines="1"
                        android:text="test desc \n"
                        android:textColor="@color/html_txt_color"
                        android:textSize="@dimen/_12sp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_favourite"
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="@dimen/_40dp"
                    android:layout_gravity="end"
                    android:padding="@dimen/_6dp"
                    android:src="@drawable/ic_favorite_black_24dp"
                    android:tint="@color/colorAccent" />
            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8dp"
                android:layout_marginTop="@dimen/_2dp"
                android:layout_marginEnd="@dimen/_8dp"
                android:layout_marginBottom="@dimen/_8dp"

                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatRatingBar
                        android:id="@+id/item_rating_bar"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:padding="@dimen/_2dp"
                        android:rating="2.3" />

                    <TextView
                        android:id="@+id/tv_no_of_sold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_6dp"
                        android:layout_marginBottom="@dimen/_6dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/lato_regular"
                        android:lineSpacingExtra="2.5dp"
                        android:maxLines="1"
                        android:padding="@dimen/_2dp"
                        android:text="(54 orders)"
                        android:textSize="@dimen/_10sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginEnd="@dimen/_8dp"
                        android:fontFamily="@font/lato_regular"
                        android:text=""
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/_12sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tv_cost_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2dp"
                        android:layout_marginEnd="@dimen/_8dp"
                        android:fontFamily="@font/lato_regular"
                        android:text=""
                        android:textColor="@color/grey20"
                        android:textSize="@dimen/_12sp"
                        android:textStyle="normal" />


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />
    </androidx.cardview.widget.CardView>
         