<?xml version="1.0" encoding="utf-8"?>

                                                        

    

           

    <androidx.cardview.widget.CardView
        android:id="@+id/sliderRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/_4dp"
        android:layout_margin="@dimen/_8dp" android:tag="layout/image_banner_layout_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/iv_slider"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <ProgressBar
            android:id="@+id/bannersProgressBar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center" />

    </androidx.cardview.widget.CardView>
         